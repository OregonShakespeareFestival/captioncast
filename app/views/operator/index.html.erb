	<%= render "shared/js_global_injection" %>
	<div class="container-fluid" id="main-operator">
		<div class="row" id="main-row-operator">
			<div class="col-md-3 col-xs-2" id="commit-column-operator">
				<div id="commit-button-operator" title="Show the selected line on the house display.">
					<span class="glyphicon glyphicon-play-circle" id="commit-icon-operator">
					</span>
				</div>
				<div id="preview-operator" data-visible="false" title="Preview what's on the house display.">
					<div id="prev-holder-operator">
						<div id="prev-spinner-operator">Loading...</div>
						<iframe src="" frameBorder="0" scrolling="no"></iframe>
					</div>
					<span id="previcon-operator" class="glyphicon glyphicon-eye-open"></span>

				</div>
			</div>
			<div class="col-md-9 col-xs-10" id="line-holder-operator">
				<div id="up-button-operator" class="wide-button-operator" title="Go back one line.">
					<span class="glyphicon glyphicon-chevron-up"></span>
				</div>
				<div id="down-button-operator" class="wide-button-operator" title="Go forward one line.">
					<span class="glyphicon glyphicon-chevron-down"></span>
				</div>

				<div id="buffer-top-operator"></div>
				<div id="line-holder-sub-operator">
					<div class="line-operator" id="line-operator-0" data-sequence="0" data-visibility="true">
				      <span class="line-full-display">
				        <span class="line-char-display"></span>
				        <span class="line-content-display"><br></span>
				      </span>
				    </div>
				</div>
				<div id="buffer-bottom-operator"></div>
			</div>
		</div>

		<div id="blackout-operator" title="Toggle this to black out the house display.">
			<span id="blackout-icon-operator" class="glyphicon glyphicon-off"></span>
		</div>
	</div>
	<div id="shade-loading-operator">
		The script is now loading...
	</div>
	<script>
		var viewMode= '<%= @view_mode %>';
		var work= '<%= @work %>';
	</script>

